{
  "category": {
    "name": "scripts",
    "parser": {
      "prog": "setup.py scripts",
      "usage": "setup.py scripts [-h] [--install opt [opt ...]]",
      "epilog": null,
      "help": "set up various scripts on this system",
      "version": "1.0.0"
    },
    "install": [
      {
        "name": "dependencies",
        "help": "install dependencies required for the scripts in this repoistory",
        "handler": "_install_dependencies"
      }
    ]
  },
  "files": [
    {
      "src": "note.py",
      "dst": "~/.local/bin/note.py"
    },
    {
      "src": "./run-setup-script.sh",
      "dst": "~/.local/bin/run-setup-script.sh"
    },
    {
      "src": "./setup/setup.py",
      "dst": "~/.local/bin/setup.py"
    },
    {
      "root": true,
      "src": "./backups/desktop-backup.sh",
      "dst": "/usr/local/bin/desktop-backup"
    },
    {
      "root": true,
      "src": "./backups/media-backup.sh",
      "dst": "/usr/local/bin/media-backup"
    },
    {
      "root": true,
      "src": "./backups/xps13-backup.sh",
      "dst": "/usr/local/bin/xps13-backup"
    },
    {
      "root": true,
      "src": "./backups/mybook-backup.sh",
      "dst": "/usr/local/bin/mybook-backup"
    },
    {
      "root": true,
      "src": "./backups/usb-backup.sh",
      "dst": "/usr/local/bin/usb-backup"
    }
  ],
  "directories": [
    {
      "root": true,
      "src": "./backups",
      "dst": "/usr/lib/backup-scripts"
    },
    {
      "src": "./setup",
      "dst": "~/.local/share/setup"
    }
  ],
  "dependencies": {
    "system": {
      "arch": [
        "pandoc",
        "at",
        "borg",
        "curl",
        "moreutils"
      ],
      "debian": [
        "pandoc",
        "at",
        "borgbackup",
        "curl",
        "moreutlis"
      ]
    },
    "pip": [
      "docopt",
      "infi.docopt-completion"
    ]
  }
}

