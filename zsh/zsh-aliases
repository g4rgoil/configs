#
# ~/.zsh_aliases
#

if [[ "$SESSION_TYPE" != "local" ]]; then
    alias tmux='tmux -L remote'
else
    alias tmux='tmux -L local'
fi

# Some pacman aliasses
alias update='yay -Syu'
alias install='yay -S'
alias uninstall='yay -R'
alias uninstall-force='yay -Rdd'

# Some handy aliasses for everyday commands
alias wttr='curl https://wttr.in/Karlsruhe'
alias neofetch='neofetch --config ~/.neofetch-config'
alias cdtemp='cd $(mktemp -d)'
alias etemp='edit $(mktemp)'
alias cpumonitor='sudo s-tui'
alias gpumonitor='nvidia-smi -l 5'
alias networkmonitor='nload'
alias vim2ps='vim -c "hardcopy > output.ps" -c quit'

# Some power aliases
alias die='shutdown now'
alias suspend='systemctl suspend'
alias hibernate='systemctl hibernate'

# Some Network aliases
alias wifiedit='kde5-nm-connection-editor'
alias wificon='nmcli connection up'
alias wifistat='nmcli general'
alias wifion='nmcli radio wifi on && nmcli radio wwan on'
alias wifioff='nmcli radio wifi off && nmcli radio wwan off'
alias wanip='dig +short myip.opendns.com @resolver1.opendns.com'

# Some Hardware aliases
alias dim="xbacklight -dec 10"
alias brighten="xbacklight -inc 10"

# Some ls aliasses
alias ls='ls -CF --color=auto'
alias l='ls'
alias la='ls -A'
alias ll='ls -al'
alias lr='ls -R'
alias ldot='ls .*'

# Some colorls aliases
alias colorls='colorls --group-directories-first'
alias lc='colorls'
alias lca='colorls --almost-all'
alias lcl='colorls --long'
alias lct='colorls --tree'
alias lcd='colorls --dirs'
alias lcf='colorls --files'
alias lcgit='colorls --git-status'

# Some filesystem aliases
alias du='du -hs'
alias df='df -h'
alias rr='rm -r'
alias rf='rm -rf'
alias cp='cp -i'
alias mv='mv -i'

# Some tree aliasses
alias tree='tree -CF -L 5'
alias treeX='tree -X'
alias treeJ='tree -J'

# Some random aliases
alias ccc="clear"
alias ping='ping -c 5'
alias openports='ss --all --numeric --processes --ipv4 --ipv6'
alias ..='cd ..'
alias q='exit'
# alias rm='rm -I'
alias scat='sudo cat'
alias ccat='ccat --bg="dark" '
alias vim='echo "Use \"e\" you idiot" && vim'
alias svim='echo "use \"se\" you bloody idiot" && sudo vim'
alias v='vim'
alias sv='svim'
alias todo='todo.sh'
alias t='todo'
alias pse='todo.sh -d ~/.todo/pse.todo.config'
alias tobuy='todo.sh -d ~/.todo/tobuy.config'
alias tb='tobuy'
alias tailf='tail -f'
alias wordc='wc --words'
alias linec='wc --lines'
alias charc='wc --chars'
alias bytec='wc --bytes'
alias mux='tmuxinator'

# Edit commands
alias edit="$VISUAL"
alias sedit="sudo $VISUAL"
alias e='edit'
alias se='sedit'

alias gedit="$GRAPHICAL"
alias sgedit="sudo $GRAPHICAL"
alias g='gedit'
alias sg='sgedit'

alias pdf="$PDFVIEW"
alias less="$PAGER"
alias page="$PAGER"

# Some aliases to quickly edit certain files
alias zshrc='edit ~/.zshrc'
alias zsh-aliases='edit ~/.zsh-aliases'
alias zsh-functions='edit ~/.zsh-functions'
alias zshenv='edit ~/.zshenv'
alias vimrc='edit ~/.vimrc'
alias fstab='sudo edit /etc/fstab'

# Error Tolerance
alias cd..='cd ..'
