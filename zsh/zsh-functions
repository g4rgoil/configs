#
# ~/.zsh-functions
#


usb_mount="/mnt/usb"
hdd_mount="/mnt/hdd"
tmp_mount="/mnt/tmp"
mapper_usb="/dev/mapper/usb"
mapper_hdd="/dev/mapper/hdd"


function mount.usb() {
    sudo mount $1 $usb_mount
}

function mount.hdd() {
    sudo mount $1 $hdd_mount
}

function mount.tmp() {
    sudo mount $1 $tmp_mount
}

function umount.usb() {
    sudo umount $usb_mount
}

function umount.hdd() {
    sudo umount $hdd_mount
}

function umount.tmp() {
    sudo umount $tmp_mount
}

function luksMount.usb() {
    if sudo cryptsetup luksOpen $1 usb; then
        mount.usb $mapper_usb
    fi
}

function luksMount.hdd() {
    if sudo cryptsetup luksOpen $1 hdd; then
        mount.hdd $mapper_hdd
    fi
}

function luksUmount.usb() {
    umount.usb
    sudo cryptsetup luksClose usb
}

function luksUmount.hdd() {
    umount.hdd
    sudo cryptsetup luksClose hdd
}
