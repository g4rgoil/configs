usb_mount="/mnt/usb"
hdd_mount="/mnt/hdd"
tmp_mount="/mnt/tmp"
luks_dev="/dev/mapper"


function mount.usb() {
    sudo mount $1 $usb_mount
}

function mount.hdd() {
    sudo mount $1 $hdd_mount
}

function mount.tmp() {
    sudo mount $1 $tmp_mount
}

function umount.usb() {
    sudo umount $usb_mount
}

function umount.hdd() {
    sudo umount $hdd_mount
}

function umount.tmp() {
    sudo umount $tmp_mount
}

function luksMount() {
    if sudo cryptsetup open ${2?} ${1?}; then
        sudo mount "${luks_dev}/${1}" "/mnt/${1}"
    fi
}

function luksUmount() {
    sudo umount "/mnt/${1?}"
    sudo cryptsetup close $1
}

function background-dl() {
    youtube-dl $1 >/dev/null &
}

