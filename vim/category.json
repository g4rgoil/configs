{
  "category": {
    "name": "vim",
    "prog": "setup.py vim",
    "usage": "setup.py [<global options>] vim [-h] [--install arg [arg ...]]",
    "help": "setup files and plugins for the vim text editor"
  },
  "files": [
    {
      "src": "vimrc",
      "dst": "~/.vimrc"
    },
    {
      "src": "gvimrc",
      "dst": "~/.gvimrc"
    },
    {
      "src": "ideavimrc",
      "dst": "~/.ideavimrc"
    }
  ],
  "directories": [
    {
      "src": "skeletons",
      "dst": "~/.vim/skeletons"
    },
    {
      "src": "snippets",
      "dst": "~/.vim/user-snippets"
    }
  ],
  "linters": {
    "requirements": {
      "arch": [
        "curl",
        "nodejs",
        "python-pip",
        "ruby"
      ],
      "debian": [
        "build-essential",
        "curl",
        "python-pip",
        "ruby"
      ]
    },
    "arch": [
      "libxml",
      "shellcheck"
    ],
    "debian": [
      "libxml",
      "shellcheck"

    ],
    "npm": [
      "coffeelint",
      "csslint",
      "jslint",
      "jsonlint",
      "phplint"
    ],
    "pip": [
      "flake8"
    ],
    "gem": [
      "mdl",
      "ruby-lint",
      "scss_lint",
      "sqlint"
    ]
  }
}
