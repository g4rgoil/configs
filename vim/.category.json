{
  "category": {
    "name": "vim",
    "parser": {
      "prog": "setup.py vim",
      "usage": "setup.py vim [-h] [--install arg [arg ...]]",
      "epilog": null,
      "help": "set up files and plugins for the vim text editor",
      "version": "1.2.0"
    },
    "install": [
      {
        "name": "linters",
        "help": "install a number of linters for various programming languages (requires pip, npm and gem)",
        "handler": "_install_linters"
      },
      {
        "name": "plugins",
        "help": "install and update all vim plugins (requires vundle to be installed)",
        "handler": "_install_plugins"
      },
      {
        "name": "vundle",
        "help": "install Vundle, the plug-in manager for Vim",
        "handler": "_install_plugin_manager"
      },
      {
        "name": "ycm",
        "help": "install YouCompleteMe, the code completion engine for Vim",
        "handler": "_install_completion"
      }
    ]
  },
  "files": [
    {
      "src": "vimrc",
      "dst": "~/.vimrc"
    },
    {
      "src": "vimrc",
      "dst": "~/.config/nvim/init.vim"
    },
    {
      "src": "gvimrc",
      "dst": "~/.gvimrc"
    },
    {
      "src": "vimpagerrc",
      "dst": "~/.vimpagerrc"
    },
    {
      "src": "ideavimrc",
      "dst": "~/.ideavimrc"
    }
  ],
  "directories": [
    {
      "src": "skeletons",
      "dst": "~/.vim/skeletons"
    },
    {
      "src": "snippets",
      "dst": "~/.vim/user-snippets/UltiSnips"
    },
    {
      "src": "ftdetect",
      "dst": "~/.vim/ftdetect"
    },
    {
      "src": "ftdetect",
      "dst": "~/.config/nvim/ftdetect"
    }
  ],
  "linters": {
    "requirements": {
      "arch": [
        "curl",
        "nodejs",
        "python-pip",
        "ruby"
      ],
      "debian": [
        "build-essential",
        "curl",
        "python-pip",
        "ruby"
      ]
    },
    "arch": [
      "libxml2",
      "shellcheck"
    ],
    "debian": [
      "libxml2",
      "shellcheck"

    ],
    "npm": [
      "coffeelint",
      "csslint",
      "jslint",
      "jsonlint",
      "phplint"
    ],
    "pip": [
    ],
    "gem": [
      "mdl",
      "ruby-lint",
      "scss_lint",
      "sqlint"
    ]
  }
}
